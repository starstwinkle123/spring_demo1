<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--p空间注入 在头文件加入约束条件 xmlns:p="http://www.springframework.org/schema/p"-->
    <bean id="userP" class="com.liwenjie.pojo.User" p:name="不知火舞" p:age="18"></bean>

    <!--p空间注入 在头文件加入约束条件 xmlns:p="http://www.springframework.org/schema/c"-->
    <!--c 构造器注入 有参构造-->
    <bean id="userC" class="com.liwenjie.pojo.User" c:name="宇智波带土" c:age="12"/>
</beans>